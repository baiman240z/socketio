{% extends 'layouts/base.twig' %}

{% block title %}Chat{% endblock %}

{% block container %}
    <h1>Chat</h1>

    <div class="section">
        <form id="main-form" method="post" action="">
            <div class="card">
                <div class="card-content z-depth-3">
                    <span class="card-title">Message</span>
                    <div class="row">
                        <div class="input-field col s6 l10">
                            <input id="message" type="text" name="message" value="">
                            <span class="helper-text" data-error="wrong" data-success="right">サーバーへの送信メッセージ</span>
                            <label for="message" class="active">Send Message</label>
                        </div>
                        <div class="input-field col s6 l2">
                            <button type="submit" name="send-btn" class="btn waves-effect waves-light blue tooltipped" data-tooltip="検索">
                                Send
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            {% raw %}
            <div class="card z-depth-3">
                <div id="app" class="card-content">
                    <span class="card-title">Talk</span>
                    <ul id="talk">
                        <li v-for="message in talk">{{ message }}</li>
                    </ul>
                </div>
            </div>
            {% endraw %}
        </form>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="/js/chat.js"></script>
{% endblock %}
